<div data-role="page" id="home">

	<div data-role="header">
		<h1>My Events</h1>
	</div><!-- /header -->

	<div data-role="content">	
	  <h2>Today</h2>
    <% @my_events_today.each do |event| %>
      <p><%= event.to_s %></p>
    <% end %>
    <h2>Tomorrow</h2>
    <% @my_events_tomorrow.each do |event| %>
      <p><%= event.to_s %></p>
    <% end %>
	</div><!-- /content -->
	
	<%= render :partial => "shared/footer", :locals => {:viewing => :home} %>
</div><!-- /page -->